{{ template "header.tmpl" . }}

{{ define "title" }}Configuration Management - DINGUS{{ end }}

<div class="container mt-5">
    <h1 class="text-center mb-4">Update Configuration</h1>
    <form id="configForm">
        <div class="mb-3">
            <h2 class="mb-3">Server Settings</h2>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label for="certFile" class="form-label">Certificate File Path:</label>
                    <input type="text" class="form-control" id="certFile" placeholder="/path/to/cert.pem">
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label for="keyFile" class="form-label">Key File Path:</label>
                    <input type="text" class="form-control" id="keyFile" placeholder="/path/to/key.pem">
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label for="lokiHookUrl" class="form-label">Loki Hook URL:</label>
                    <input type="text" class="form-control" id="lokiHookUrl" placeholder="http://your-loki-instance:3100/loki/api/v1/push">
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h2 class="mb-3">Wild Apricot Configuration</h2>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label for="wildApricotAccountId" class="form-label">Account ID:</label>
                    <input type="text" class="form-control" id="wildApricotAccountId" placeholder="123456">
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label for="contactFilterQuery" class="form-label">Contact Filter Query:</label>
                    <input type="text" class="form-control" id="contactFilterQuery" placeholder="status eq Active or status eq 'Pending - Renewal'">
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <label for="tagIdFieldName" class="form-label">Tag ID Field Name:</label>
                    <input type="text" class="form-control" id="tagIdFieldName" placeholder="Door Key">
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <label for="trainingFieldName" class="form-label">Training Field Name:</label>
                    <input type="text" class="form-control" id="trainingFieldName" placeholder="Safety Training">
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Update Config</button>
        </div>
    </form>
</div>
    
<script src="/js/configManagement.js"></script>

{{ template "footer.tmpl" . }}